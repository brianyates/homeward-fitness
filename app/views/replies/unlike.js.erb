$("#reply-like-<%= params[:id] %>").attr("href", "/reply-like/<%= params[:id] %>");
$("#reply-like-<%= params[:id] %>").removeClass('loaded');
<% if @like_count > 0 %>
$("#reply-like-count-<%= params[:id] %>").replaceWith('<div class="dib" id="reply-like-count-<%= params[:id] %>">| <a data-remote="true" class="text-xsmall text-muted retrieve-likes" href="/get-reply-likes/<%= params[:id] %>"><%= j pluralize(@like_count, "Like") %></a></div>');
<% else %>
$("#reply-like-count-<%= params[:id] %>").replaceWith('<div class="dib" id="reply-like-count-<%= params[:id] %>"></div>');
<% end %>
$('.retrieve-likes').click(function(){$('#like-modal').modal('show')});
	
	