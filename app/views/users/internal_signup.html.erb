<div class="main-container">
	<% if @user %>
		<h2>Update Your Account</h2>
		<div class="form-container pad-top-0 m-width-600 grey-form rounded text-left">
			<%= form_for(@user, method: :patch, html: {id: "new_user"}, url: url_for(controller: 'users', action: 'update_signup')) do |f| %>
				<div id="error-msg-signup" class="text-left"><p></p></div>
				<div class="field-container">
					<%= f.label nil, "Full Name:" %>
					<%= f.text_field :name, class: "form-control", placeholder: "Enter your full name..." %>
				</div>
				<div class="field-container">
					<%= f.label nil, "Email Address:" %>
					<%= f.email_field :email, class: "form-control", placeholder: "Enter your email address..." %>
				</div>
				<div class="field-container">
					<%= f.label nil, "Password:" %>
					<%= f.password_field :password, class: "form-control", placeholder: "Must be at least 8 characters" %>
				</div>
				<div class="field-container text-small">
					Please note that updating your account will delete all your <%= @user.provider.capitalize %> data stored on Homeward Fitness, including your profile picture.
					This cannot be undone, unless you create a new account. (This really isn't a very big deal...you can still upload your own images and data).
				</div>
				<div class="field-container">
					<%= f.submit "Update Account", id:"account-submit-btn", class:"btn btn-main" %>
				</div>
			<% end %>
		</div>
	<% else %>
		<h3>You are not authorized to view this page.</h3>
	<% end %>
</div>